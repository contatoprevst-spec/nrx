            const selectFuncaoMatriz = document.getElementById('select-funcao-matriz');

            selectSetorMatriz.addEventListener('change', (e) => {
                // Atualizar opções de função baseado no setor
                const funcaoSelect = selectFuncaoMatriz;
                funcaoSelect.innerHTML = '<option value="">Selecionar Função</option>';
                
                const funcoesPorSetor = {
                    'producao': ['Operador de Máquina', 'Supervisor de Produção', 'Auxiliar de Produção'],
                    'administrativo': ['Assistente Administrativo', 'Analista', 'Coordenador'],
                    'manutencao': ['Técnico de Manutenção', 'Eletricista', 'Mecânico'],
                    'logistica': ['Auxiliar de Logística', 'Motorista', 'Conferente'],
                    'qualidade': ['Analista de Qualidade', 'Inspetor', 'Auditor']
                };
                
                if (funcoesPorSetor[e.target.value]) {
                    funcoesPorSetor[e.target.value].forEach(funcao => {
                        const option = document.createElement('option');
                        option.value = funcao.toLowerCase().replace(/\s+/g, '-');
                        option.textContent = funcao;
                        funcaoSelect.appendChild(option);
                    });
                }
            });

